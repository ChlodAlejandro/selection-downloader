{

    "manifest_version": 2,
    "name": "Selection Downloader",
    "version": "1.0.0",

    "default_locale": "en",
    "description": "Allows mass-downloading of links in a selection.",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "512": "icons/512.png"
    },
    
    "author": "Chlod Alejandro",

    "background": {
        "scripts": [
            "src/background.js"
        ]
    },
    
    "permissions": [
        "contextMenus",
        "downloads",
        "activeTab",
        "cookies"
    ],
    
    "applications": {
        "gecko": {
            "id": "sectiondownloader@chlod.net"
        }
    }

}